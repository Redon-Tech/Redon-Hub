datasource db {
  provider = "mongodb"
  url      = env("database")
}

generator client {
  provider             = "prisma-client-py"
  interface            = "asyncio"
  recursive_type_depth = 5
}

model User {
  // When creating a user ALWAYS pass a id, this does not have a default
  id         Int      @id @map("_id")
  createdAt  DateTime @default(now())
  discordId  BigInt   @default(0)
  verifiedAt DateTime @default(now())
  purchases  String[]
}

model Product {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt   DateTime @default(now())
  name        String
  description String
  imageId     String   @default("")
  price       Int
  productId   Int
  stock       Int?
  attachments String[]
  // Tags will be refered to by ID, we would use connectors if we werent supporting open cloud
  tags        String[]
  purchases   Int      @default(0)
  owners      Int      @default(0)

  @@unique([name])
}

model Tag {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  name      String
  color     String[]
  textColor String[]

  @@unique([name])
}
